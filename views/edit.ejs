<%include ./partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">Редактирай <%= blog.title%></div>
    
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
       
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" required>
        </div>
       
          <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" required>
        </div>
         
          <div class="field">
            <label>Description</label>
            <textarea name="blog[body]" required placeholder="blog post goes here"> <%= blog.body %> </textarea>
        </div>
        <input class="ui pink basic button" type="submit">
    </form>
</div>
<%include ./partials/footer%>